<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ReciShare.Models"
             x:Class="ReciShare.Views.RecipeDetailsPage"
             x:DataType="model:Recipe"
             Title="RecipeDetailsPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="{Binding Name, StringFormat='Name: {0}'}" />
            <Label Text="{Binding Description,StringFormat='Description: {0}'}" />
            <Image HorizontalOptions="Center"
                   Source="{Binding Image}"/>

            <Button Text="Done" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>