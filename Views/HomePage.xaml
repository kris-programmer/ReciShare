<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReciShare.Views.HomePage"
             Title="ReciShare">
    <VerticalStackLayout>
        <Frame BackgroundColor="Green">
            <Label 
            Text="Welcome to ReciShare!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </Frame>

        <Label Text="Click the button below to create a recipe:" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"/>

        <Button Text="Create a new Recipe" Clicked="CreateARecipe_Clicked"/>
    </VerticalStackLayout>
</ContentPage>